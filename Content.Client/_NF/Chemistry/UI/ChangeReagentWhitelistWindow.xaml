<DefaultWindow
    Margin="4,0"
    SetSize="325 300"
    xmlns="https://spacestation14.io">
    <BoxContainer Orientation="Vertical">
        <LineEdit
            HorizontalExpand="True"
            Margin="0,4"
            Name="SearchBar"
            PlaceHolder="{Loc 'admin-add-reagent-window-search-placeholder'}" />
        <ItemList
            Margin="0,4"
            Name="ReagentList"
            SelectMode="Single"
            VerticalExpand="True" />
        <Button
            HorizontalExpand="True"
            Margin="0,4"
            Name="ApplyButton" />
        <Button
            HorizontalExpand="True"
            Margin="0,4"
            Name="ResetButton" />
    </BoxContainer>
</DefaultWindow>
